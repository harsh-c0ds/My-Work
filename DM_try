import numpy as np
import matplotlib.pyplot as plt

Z = np.arange(1000,0, -10) # Redshift array for plotting
rho_contrast = 1 / (1 + Z)
plt.plot(Z, rho_contrast)
plt.xlabel("Redshift z")
plt.ylabel("Density Contrast ρ/ρ₀")
plt.title("Density Contrast vs Redshift")
plt.grid()
plt.savefig("density_contrast_vs_redshift.png")
print(f"Density Contrast at z=0: {rho_contrast[-1]:.4f}")